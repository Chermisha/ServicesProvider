@model List<ServicesProvider.Models.ServiceViewModel>
@{
    ViewData["Title"] = "Service list with edit";
    ViewData["Role"] = "Provider";
}

<h1>Список услуг</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Цена</th>
            <th>Категория</th>
            <th>Внести изменения</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model != null)
            {
                @foreach (var service in Model)
                {
                    <tr>
                        <td>@service.Name</td>
                        <td>@service.Description</td>
                        <td>@service.Price</td>
                        <td>@service.Category</td>
                        <td style="text-align: right;">
                            <a asp-controller="Services" asp-action="Update" asp-route-id="@service.Id" class="btn btn-primary">Изменить</a>
                            <a asp-controller="Services" asp-action="Delete" asp-route-id="@service.Id" class="btn btn-danger ml-2">Удалить</a>
                        </td>
                    </tr>
                }
            }
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-controller="Services" asp-action="Create" class="btn btn-success">Добавить услугу</a>
</div>