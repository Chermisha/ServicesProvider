@model List<ServicesProvider.Models.CategoryViewModel>

@{
    ViewData["Title"] = "Category list";
    ViewData["Role"] = "Provider";
}

<h1>Список категорий</h1>

<table class="table">
    <thead>
        <tr>
            <th>Название категории</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td style="text-align: right;">
                    <a asp-controller="Categories" asp-action="Update" asp-route-id="@category.Id" class="btn btn-primary">Изменить</a>
                    <a asp-controller="Categories" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger ml-2">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-controller="Categories" asp-action="Create" class="btn btn-success">Добавить категорию</a>
</div>